{
  "name": "csgo-rich-presence",
  "version": "1.0.0",
  "description": "Show current game status from CS:GO in Discord.",
  "repository": {
    "type": "git",
    "url": "https://github.com/borisgrigorov/CSGO-Discord-rich-presence"
  },
  "main": "./src/index.js",
  "os": [
    "win32",
    "linux"
  ],
  "scripts": {
    "start": "electron .",
    "build": "pkg . --out-path build",
    "electron-build": "electron-packager . csgo-rich-presence --platform linux --arch x64 --out build/",
    "toDebianPkg": "electron-installer-debian --src build/csgo-rich-presence-linux-x64/ --dest build/installers/ --arch amd64"
  },
  "author": {
    "name": "Boris Grigorov",
    "email": "boris.grigorov26@gmail.com",
    "url": "https://vvveb.cz"
  },
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "discord-rpc": "^3.1.4",
    "express": "^4.17.1",
    "find-process": "^1.4.4",
    "i": "^0.3.6",
    "mustache-express": "^1.3.0",
    "npm": "^6.14.10",
    "request": "^2.88.2"
  },
  "bin": "./src/index.js",
  "pkg": {
    "scripts": [
      "./src/*"
    ],
    "assets": [
      "./src/**/*"
    ],
    "targets": [
      "node8-linux",
      "node8-win"
    ],
    "out-path": "build"
  },
  "devDependencies": {
    "electron": "^11.2.1",
    "electron-installer-debian": "^3.1.0",
    "electron-packager": "^15.2.0"
  }
}
